{
  "name": "Taobao",
  "version": "1.0.0",
  "description": "Extension for Taobao",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://s.taobao.com/search?*"],
      "js": ["content.js", "helpers/getStorageData.js", "helpers/fetchData.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "taobao.png",
    "48": "taobao.png",
    "128": "taobao.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "assets/sprite/sprite.png",
        "assets/sprite/sprite.css"
      ],
      "matches": ["https://s.taobao.com/*"]
    }
  ],
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://s.taobao.com/*", "https://script.google.com/*"],
  "action": {
    "default_title": "Taobao"
  }
}
